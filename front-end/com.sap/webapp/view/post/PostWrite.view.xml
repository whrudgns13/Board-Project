<mvc:View
	controllerName="com.sap.controller.post.PostWrite"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
  xmlns:rte="sap.ui.richtexteditor"
  xmlns:core="sap.ui.core"
  xmlns:control="com.sap.control"
>
<Page>
  <headerContent>
    <Input
      placeholder="제목을 입력하세요" 
      value="{ViewModel>/title}"      
    />
  </headerContent>
  <content>
    <rte:RichTextEditor
        id="textEditor"
        width="100%"
        height="100%"
        customToolbar="true"
        showGroupFont="true"
        showGroupLink="true"
        showGroupInsert="true"
        value="{ViewModel>/content}"
      />
  </content>
  <footer>
    <OverflowToolbar>
      <ToolbarSpacer/>
      <Button type="Emphasized" text="돌아가기" press=".onBack"/>
      <Button type="Emphasized" text="저장" press=".onPost"/>      
    </OverflowToolbar>
  </footer>
</Page>
</mvc:View>